html
    display flex

body
    flex 1
    background lighten(black, 65%)
    font-family arial, sans-serif
    display flex
    flex-direction column
    margin 0
    padding 0

h1
    padding 2rem 
    margin 0
    color white
    border-bottom 5px solid lighten(black, 70%)


.geo-container
    flex 1
    flex-direction column

.geo-coordinate
    background-color lighten(black, 70%)
    font-size .8rem
    padding 1rem

.geo-item
    flex 1
    background-color lighten(lightgrey, 20%)
    font-size 1.5rem
    font-weight bold
    color darken(grey, 20%)
    padding 1rem 2rem
    &:nth-child(2n)
        background-color lighten(lightgrey, 40%)
    &.active
        background-color lighten(green, 10%)
        color white
        .distance
            color white

            
    
    .pos
        font-size 1.2rem
        font-weight normal
        display none
        color rgba(0,0,0, .3)
    .distance
        color lighten(grey, 5%)
        font-size 1.2rem

.no-geo
    flex 1
    display none
    background-color rgba(0,0,0, .8)
    color white
    justify-content center
    align-items center
    font-size 2rem
    font-weight bold
    position fixed
    width 100%
    height 100%
    top 0
    left 0
    &.show
        display flex

